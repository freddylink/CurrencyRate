@page
@model IndexModel
@{
    ViewData["Title"] = "Currency Rates";
}

<div class="row">
    <div class="col-lg-12">
        <form method="get" action="/api/banks/" class="form">
            <div class="form-group">
                <div class="input-group">
                    <input type="date" class="form-control" id="datePicker" name="datePicker" placeholder="Дата">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Показать</button>
            </div>
        </form>
    </div>
</div>
